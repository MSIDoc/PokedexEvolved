@model Pokedex.Models.Entities.HomeContent
@inject Pokedex.Services.FormattingService Formatter

<div id="home-content">
    <div class="row">
        <div class="col-lg 12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2> @Model.Title - @Model.SubTitle </h2>


                    <span class="pull-right">
                        <span class="dp">Date Posted:</span>
                        @Formatter.AsDatePostedFormat(Model.DatePosted)
                    </span>
                </div>
                <div class="panel-body">
                    @Model.Body
                </div>
            </div>
        </div>
    </div>
</div>