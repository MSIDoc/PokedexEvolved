@model PokeView

<div id="body-content-menu" class="col-lg-3">

    <div class="container-fluid">
        <div class="row align-items-center">

            <div class="col-lg-12 col-sm-12">

                <div class="row">

                    <div class="col-md-12">
                        <h2 class="text-center search-header">Search for a pokemon</h2>
                        <div id="custom-search-input">
                            <div class="input-group col-md-12">
                                <input id="pokemon-search" type="text" class="form-control input-lg" placeholder="Search..." />
                                <span class="input-group-btn">
                                    <button id="poke-search-btn" class="btn btn-info btn-lg" type="button">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>

                </div>

                <div id="pokemon-list" class="list-group">

                    @Html.Partial("/Views/Partials/PokeList.cshtml", Model)
               
                </div>

            </div>

        </div>
    </div>
</div>

<div id="pokemon-content" class="col-lg-9 visible-lg">

    <div id="card" data-current-side="front">

        <div class="front row-no-margin">
           <div class="col-md-12 text-center">
          
               @Html.Partial("/Views/Partials/HomeContent.cshtml", Model.HomeContent)

           </div>
        </div>

        <div class="back">
            <div id="poke-details">

                @Html.Partial("/Views/Partials/PokeDetails.cshtml", Model)

            </div>
        </div>

    </div>

</div>