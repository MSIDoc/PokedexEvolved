<div id="pokemon-content" class="col-lg-9 visible-lg">

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="pokemon-title"><h2 style="color:#fff">Bulbasaur - <span class="pokedex-num">1</span></h2></div>
                <div class="stat-section">
                    <h3 class="stat-row">Stats</h3>

                    <div class="stats-container">


                        <div class="row stat-row text-center">
                            <div class="col-lg-2"><span class="atkLabel">HP</span></div>
                            <div class="col-lg-2"><span class="atkValue">45</span></div>
                            <div class="col-lg-4"><span class="atkLabel">ARK HP Value</span></div>
                            <div class="col-lg-2"><span class="atkValue">437.5 HP</span></div>
                        </div>
                        <div class="row stat-row text-center">
                            <div class="col-lg-2"><span class="atkLabel">Attack</span></div>
                            <div class="col-lg-2"><span class="atkValue">49</span></div>
                            <div class="col-lg-4"><span class="atkLabel">ARK Attack Value</span></div>
                            <div class="col-lg-2"><span class="atkValue">43.5</span></div>
                        </div>
                        <div class="row stat-row text-center">
                            <div class="col-lg-2"><span class="atkLabel">Defense</span></div>
                            <div class="col-lg-2"><span class="atkValue">49</span></div>
                            <div class="col-lg-4"><span class="atkLabel">ARK Defense Value</span></div>
                            <div class="col-lg-2"><span class="atkValue">+218.75 HP</span></div>
                        </div>

                        <div class="row stat-row text-center">
                            <div class="col-lg-2"><span class="atkLabel">Sp. Attack</span></div>
                            <div class="col-lg-2"><span class="atkValue">65</span></div>
                            <div class="col-lg-4"><span class="atkLabel">ARK Attack Value</span></div>
                            <div class="col-lg-2"><span class="atkValue">400</span></div>
                        </div>

                        <div class="row stat-row text-center">
                            <div class="col-lg-2"><span class="atkLabel">Sp. Defense</span></div>
                            <div class="col-lg-2"><span class="atkValue">65</span></div>
                            <div class="col-lg-4"><span class="atkLabel">ARK Attack Value</span></div>
                            <div class="col-lg-2"><span class="atkValue">400</span></div>
                        </div>

                        <div class="row stat-row text-center">
                            <div class="col-lg-2"><span class="atkLabel">Speed</span></div>
                            <div class="col-lg-2"><span class="atkValue">45</span></div>
                            <div class="col-lg-4"><span class="atkLabel">ARK stat effects</span></div>
                            <div class="col-lg-2"><span class="atkValue">400</span></div>
                        </div>
                    </div>
                </div>


                <div class="meta-panel">
                    <div class="row stat-row">
                        <div class="tame-type-label col-lg-2">Taming type:</div><div class="tame-type-value col-lg-2">Herbivore</div>
                    </div>

                    <div class="row stat-row">
                        <div class="move-set-block">
                            <div class="left-click-move">Left Click:</div>
                            <div class="right-click-move">Right Click:</div>
                            <div class="c-move">c Move:</div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="col-lg-6">
                <div class="pokemon-images">
                    <!-- Make a jumbotron? -->

                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img src="~/images/flareon.jpg" alt="flareon">
                                <div class="carousel-caption">
                                    Flareon in the fild
                                </div>
                            </div>
                            <div class="item">
                                <img src="~/images/flareon2.jpg" alt="flareon">
                                <div class="carousel-caption">
                                    Flareon duplicate
                                </div>
                            </div>
                            <div class="item">
                                <img src="~/images/flareon3.jpg" alt="flareon">
                                <div class="carousel-caption">
                                    Flareon the majestic
                                </div>
                            </div>

                        </div>

                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>



                <div class="row stat-row">
                    <div class="gathering-table">
                        <table id="gathering-table" class="table table-bordered table-condensed">
                            <th>Resource</th>
                            <th>Can Gather</th>
                            <tr><td>Berries</td><td>Yes</td></tr>
                            <tr><td>Stone</td><td>No</td></tr>
                            <tr><td>Fiber</td><td>No</td></tr>
                            <tr><td>Wood/Thatch</td><td>Yes</td></tr>
                        </table>
                    </div>
                </div>
            </div>


        </div>





    </div>

</div>